from e002_HeroesVillanos import Villanos

villano1 = Villanos("Hannibal", "Canibal", "diferentes armas")
print(villano1.nombre)
print(villano1.poder)
print(f"armas, {villano1.armas}")

villano2 = Villanos("Thanos", "superpoder", "diferentes armas")
villano2.imprimirNombre()
print(villano2.nombre)
print(villano2.poder)
print(f"armas, {villano2.armas}")
